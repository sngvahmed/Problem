#include "bits/stdc++.h"
#include <functional>
#include <ext/numeric> 
using namespace std;

#define SZ(x) (int)x.size()
#define pb push_back
#define mp make_pair
#define F first
#define S second
#define all(x) x.begin(), x.end()
#define rall(x) x.rbegin(), x.rend()
#define MMS(x, v) memset(x, v, sizeof(x))
#define SF(x) scanf("%d" , &x)

int main() {
	int a, b, c;
	SF(a), SF(b), SF(c);
	cout
			<< max(
					max(max(max((a + b) * c, ((a + c) * b)), (b + a) * c),
							a * b * c), a + b + c) << endl;
	return 0;
}
