#include "bits/stdc++.h"
#include <functional>
#include <ext/numeric> 
using namespace std;

#define SZ(x) (int)x.size()
#define pb push_back
#define mp make_pair
#define F first
#define S second
#define all(x) x.begin(), x.end()
#define rall(x) x.rbegin(), x.rend()
#define MMS(x, v) memset(x, v, sizeof(x))
#define SF(x) scanf("%d" , &x)

int main() {

	int n, m;
	SF(n), SF(m);
	if (n > m) {
		int rem = n % m;
		int tot = n / m;
		int ret = 0;
		for (int i = 0; i < rem; i++) {
			ret += ((tot + 1) * tot) / 2;
		}
		cout << ret << endl;
		for (int i = 0; i < n - rem; i++) {
			ret += ((tot - 1) * tot) / 2;
		}
		int out = n - m;
		cout << ret << " " << (out * (out - 1)) / 2 << endl;
	}
	return 0;
}
