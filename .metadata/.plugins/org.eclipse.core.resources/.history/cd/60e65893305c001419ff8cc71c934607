#include "bits/stdc++.h"
#include <functional>
#include <ext/numeric> 
using namespace std;

#define SZ(x) (int)x.size()
#define pb push_back
#define mp make_pair
#define F first
#define S second
#define all(x) x.begin(), x.end()
#define rall(x) x.rbegin(), x.rend()
#define MMS(x, v) memset(x, v, sizeof(x))

int main() {
//  freopen("test.in", "rt", stdin);
	int n;
	cin >> n;
	vector<int> arr(n);
	for (int i = 0; i < n; i++) {
		cin >> arr[i];
	}
	sort(rall(arr));
	int i = 0;
	int tot = arr[0];
	while (tot > 0 && i > 0) {
		cout << tot << endl;
		i++;
		if (tot > arr[i]) {
			tot -= arr[i];
		} else if (tot == arr[i]) {
			cout << i << endl;
			return 0;
		}
	}
	cout << i << endl;
	return 0;
}
